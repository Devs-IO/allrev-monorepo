<div class="container-fluid p-3" style="max-width: 1400px">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h3 class="fw-bold text-brand mb-1">{{ greeting }}!</h3>
      <p class="text-muted mb-0" *ngIf="isAdmin">Painel administrativo SaaS</p>
      <p class="text-muted mb-0" *ngIf="isManager && !isAdmin">
        Visão estratégica do negócio
      </p>
      <p class="text-muted mb-0" *ngIf="isAssistant && !isAdmin && !isManager">
        Vamos produzir? Aqui estão suas prioridades.
      </p>
    </div>
    <div class="d-none d-md-block text-end">
      <span class="fs-5 text-dark fw-semibold">{{
        currentDate | date : "dd/MM/yyyy"
      }}</span>
    </div>
  </div>

  <!-- ===== PAINEL ADMIN (SaaS Overview) ===== -->
  <ng-container *ngIf="isAdmin">
    <ng-container *ngIf="adminStats$ | async as stats; else loading">
      <div class="row g-3 mb-4">
        <!-- Card: Empresas Ativas -->
        <div class="col-12 col-md-6 col-lg-4">
          <div class="card border-0 shadow-sm h-100 overflow-hidden card-hover">
            <div class="card-body p-4 position-relative">
              <div class="d-flex justify-content-between align-items-start mb-4">
                <div>
                  <div class="text-uppercase text-muted fw-bold small mb-1">
                    Empresas Ativas
                  </div>
                  <h2 class="text-dark fw-bold mb-0">
                    {{ stats.activeTenants }}
                  </h2>
                </div>
                <div
                  class="icon-box bg-primary-subtle text-primary rounded-circle"
                >
                  <i class="bi bi-building fs-4"></i>
                </div>
              </div>
              <div class="d-flex align-items-center small text-muted">
                <i class="bi bi-info-circle me-1"></i> Clientes SaaS ativos
              </div>
              <div class="bg-shape bg-primary"></div>
            </div>
          </div>
        </div>

        <!-- Card: Total de Usuários -->
        <div class="col-12 col-md-6 col-lg-4">
          <div class="card border-0 shadow-sm h-100 overflow-hidden card-hover">
            <div class="card-body p-4 position-relative">
              <div class="d-flex justify-content-between align-items-start mb-4">
                <div>
                  <div class="text-uppercase text-muted fw-bold small mb-1">
                    Total de Usuários
                  </div>
                  <h2 class="text-dark fw-bold mb-0">
                    {{ stats.totalUsers }}
                  </h2>
                </div>
                <div
                  class="icon-box bg-success-subtle text-success rounded-circle"
                >
                  <i class="bi bi-people-fill fs-4"></i>
                </div>
              </div>
              <div class="d-flex align-items-center small text-muted">
                <i class="bi bi-info-circle me-1"></i> Contas de usuários
                registradas
              </div>
              <div class="bg-shape bg-success"></div>
            </div>
          </div>
        </div>

        <!-- Card: Mensalidades Atrasadas -->
        <div class="col-12 col-md-6 col-lg-4">
          <div class="card border-0 shadow-sm h-100 overflow-hidden card-hover">
            <div class="card-body p-4 position-relative">
              <div class="d-flex justify-content-between align-items-start mb-4">
                <div>
                  <div class="text-uppercase text-muted fw-bold small mb-1">
                    Mensalidades Atrasadas
                  </div>
                  <h2 class="text-danger fw-bold mb-0">
                    {{ stats.overduePayments }}
                  </h2>
                </div>
                <div
                  class="icon-box bg-danger-subtle text-danger rounded-circle"
                >
                  <i class="bi bi-exclamation-triangle-fill fs-4"></i>
                </div>
              </div>
              <div class="d-flex align-items-center small text-muted">
                <i class="bi bi-info-circle me-1"></i> Pendências de clientes
              </div>
              <div class="bg-shape bg-danger"></div>
            </div>
          </div>
        </div>
      </div>

      <!-- Ações Rápidas Admin -->
      <div class="row g-4">
        <div class="col-12 col-lg-8">
          <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white pt-4 pb-0 border-0">
              <h5 class="fw-bold text-brand">Ações Rápidas</h5>
            </div>
            <div class="card-body p-4">
              <div class="row g-3">
                <div class="col-6 col-sm-4">
                  <a
                    routerLink="/tenants"
                    class="btn btn-outline-light w-100 h-100 p-3 text-start border d-flex flex-column gap-2 card-action"
                  >
                    <div
                      class="icon-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center"
                    >
                      <i class="bi bi-building"></i>
                    </div>
                    <span class="fw-bold text-dark">Empresas</span>
                    <small class="text-muted">Gerenciar</small>
                  </a>
                </div>
                <div class="col-6 col-sm-4">
                  <a
                    routerLink="/users"
                    class="btn btn-outline-light w-100 h-100 p-3 text-start border d-flex flex-column gap-2 card-action"
                  >
                    <div
                      class="icon-sm bg-success text-white rounded-circle d-flex align-items-center justify-content-center"
                    >
                      <i class="bi bi-people-fill"></i>
                    </div>
                    <span class="fw-bold text-dark">Usuários</span>
                    <small class="text-muted">Gerenciar</small>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="col-12 col-lg-4">
          <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white pt-4 pb-0 border-0">
              <h5 class="fw-bold text-dark">Atenção</h5>
            </div>
            <div class="card-body p-4">
              <div class="list-group list-group-flush">
                <div
                  class="list-group-item px-0 py-3 d-flex justify-content-between align-items-center"
                  [class.bg-danger-subtle]="stats.overduePayments > 0"
                  [class.rounded]="stats.overduePayments > 0"
                  [class.p-2]="stats.overduePayments > 0"
                >
                  <div class="d-flex align-items-center gap-3">
                    <i
                      class="bi bi-exclamation-triangle-fill text-danger fs-5"
                    ></i>
                    <div class="d-flex flex-column">
                      <span
                        class="fw-bold"
                        [class.text-danger]="stats.overduePayments > 0"
                        >Mensalidades Atrasadas</span
                      >
                      <small class="text-muted">Pendências de clientes</small>
                    </div>
                  </div>
                  <span
                    class="badge rounded-pill fs-6"
                    [ngClass]="
                      stats.overduePayments > 0
                        ? 'bg-danger'
                        : 'bg-secondary'
                    "
                  >
                    {{ stats.overduePayments }}
                  </span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </ng-container>
  </ng-container>

  <!-- ===== PAINEL GESTOR (Manager Dashboard - Financeiro) ===== -->
  <ng-container *ngIf="isManager && !isAdmin">
    <ng-container *ngIf="managerStats$ | async as stats; else loading">
      <div class="row g-3 mb-4">
        <!-- Receita Total -->
        <div class="col-12 col-md-6 col-lg-3">
          <div
            class="card border-0 shadow-sm h-100 overflow-hidden card-hover"
          >
            <div class="card-body p-4 position-relative">
              <div class="d-flex justify-content-between align-items-start mb-4">
                <div>
                  <div class="text-uppercase text-muted fw-bold small mb-1">
                    Receita Total
                  </div>
                  <h2 class="text-dark fw-bold mb-0">
                    {{ stats.revenue | currency : "BRL" : "symbol" : "1.0-0" }}
                  </h2>
                </div>
                <div
                  class="icon-box bg-primary-subtle text-primary rounded-circle"
                >
                  <i class="bi bi-graph-up-arrow fs-4"></i>
                </div>
              </div>
              <div class="d-flex align-items-center small text-muted">
                <i class="bi bi-info-circle me-1"></i> Valor bruto de
                contratos
              </div>
              <div class="bg-shape bg-primary"></div>
            </div>
          </div>
        </div>

        <!-- Custo Operacional -->
        <div class="col-12 col-md-6 col-lg-3">
          <div
            class="card border-0 shadow-sm h-100 overflow-hidden card-hover"
          >
            <div class="card-body p-4 position-relative">
              <div class="d-flex justify-content-between align-items-start mb-4">
                <div>
                  <div class="text-uppercase text-muted fw-bold small mb-1">
                    Custo Operacional
                  </div>
                  <h2 class="text-danger fw-bold mb-0">
                    {{ stats.cost | currency : "BRL" : "symbol" : "1.0-0" }}
                  </h2>
                </div>
                <div
                  class="icon-box bg-danger-subtle text-danger rounded-circle"
                >
                  <i class="bi bi-people-fill fs-4"></i>
                </div>
              </div>
              <div class="d-flex align-items-center small text-muted">
                <i class="bi bi-arrow-down-right text-danger me-1"></i>
                Pagamentos a parceiros
              </div>
              <div class="bg-shape bg-danger"></div>
            </div>
          </div>
        </div>

        <!-- Lucro Líquido Real -->
        <div class="col-12 col-md-6 col-lg-3">
          <div
            class="card border-0 shadow-sm h-100 overflow-hidden card-hover bg-brand text-white position-relative"
          >
            <div class="card-body p-4 position-relative z-1">
              <div class="d-flex justify-content-between align-items-start mb-4">
                <div>
                  <div class="text-uppercase text-white-50 fw-bold small mb-1">
                    Lucro Líquido Real
                  </div>
                  <h2 class="text-white fw-bold mb-0">
                    {{ stats.netProfit | currency : "BRL" : "symbol" : "1.0-0" }}
                  </h2>
                </div>
                <div
                  class="icon-box bg-white text-brand rounded-circle shadow-sm"
                >
                  <i class="bi bi-wallet2 fs-4"></i>
                </div>
              </div>
              <div class="d-flex align-items-center small text-white-50">
                <i class="bi bi-pie-chart-fill me-1"></i> Margem:
                <span class="text-white fw-bold ms-1"
                  >{{ stats.margin | number : "1.0-1" }}%</span
                >
              </div>
            </div>
            <div class="card-pattern"></div>
          </div>
        </div>

        <!-- Ordens Atrasadas -->
        <div class="col-12 col-md-6 col-lg-3">
          <div
            class="card border-0 shadow-sm h-100 overflow-hidden card-hover"
          >
            <div class="card-body p-4 position-relative">
              <div class="d-flex justify-content-between align-items-start mb-4">
                <div>
                  <div class="text-uppercase text-muted fw-bold small mb-1">
                    Itens Atrasados
                  </div>
                  <h2 class="text-warning fw-bold mb-0">
                    {{ stats.overdueItemsCount }}
                  </h2>
                </div>
                <div
                  class="icon-box bg-warning-subtle text-warning rounded-circle"
                >
                  <i class="bi bi-exclamation-circle fs-4"></i>
                </div>
              </div>
              <div class="d-flex align-items-center small text-muted">
                <i class="bi bi-info-circle me-1"></i> Prazos vencidos
              </div>
              <div class="bg-shape bg-warning"></div>
            </div>
          </div>
        </div>
      </div>

      <!-- Ações Rápidas Gestor -->
      <div class="row g-4">
        <div class="col-12 col-lg-8">
          <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white pt-4 pb-0 border-0">
              <h5 class="fw-bold text-brand">Acesso Rápido</h5>
            </div>
            <div class="card-body p-4">
              <div class="row g-3">
                <div class="col-6 col-sm-4">
                  <a
                    routerLink="/orders/create"
                    class="btn btn-outline-light w-100 h-100 p-3 text-start border d-flex flex-column gap-2 card-action"
                  >
                    <div
                      class="icon-sm bg-brand text-white rounded-circle d-flex align-items-center justify-content-center"
                    >
                      <i class="bi bi-plus-lg"></i>
                    </div>
                    <span class="fw-bold text-dark">Nova Ordem</span>
                    <small class="text-muted">Cadastrar venda</small>
                  </a>
                </div>
                <div class="col-6 col-sm-4">
                  <a
                    routerLink="/orders"
                    class="btn btn-outline-light w-100 h-100 p-3 text-start border d-flex flex-column gap-2 card-action"
                  >
                    <div
                      class="icon-sm bg-primary-subtle text-primary rounded-circle d-flex align-items-center justify-content-center"
                    >
                      <i class="bi bi-list-ul"></i>
                    </div>
                    <span class="fw-bold text-dark">Listar Ordens</span>
                    <small class="text-muted">Ver todas</small>
                  </a>
                </div>
                <div class="col-6 col-sm-4">
                  <a
                    routerLink="/clients"
                    class="btn btn-outline-light w-100 h-100 p-3 text-start border d-flex flex-column gap-2 card-action"
                  >
                    <div
                      class="icon-sm bg-info-subtle text-info rounded-circle d-flex align-items-center justify-content-center"
                    >
                      <i class="bi bi-people"></i>
                    </div>
                    <span class="fw-bold text-dark">Clientes</span>
                    <small class="text-muted">Base de contatos</small>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="col-12 col-lg-4">
          <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white pt-4 pb-0 border-0">
              <h5 class="fw-bold text-dark">Atenção</h5>
            </div>
            <div class="card-body p-4">
              <div class="list-group list-group-flush">
                <div
                  class="list-group-item px-0 py-3 d-flex justify-content-between align-items-center"
                  [class.bg-danger-subtle]="stats.overdueItemsCount > 0"
                  [class.rounded]="stats.overdueItemsCount > 0"
                  [class.p-2]="stats.overdueItemsCount > 0"
                >
                  <div class="d-flex align-items-center gap-3">
                    <i
                      class="bi bi-exclamation-triangle-fill text-danger fs-5"
                    ></i>
                    <div class="d-flex flex-column">
                      <span
                        class="fw-bold"
                        [class.text-danger]="stats.overdueItemsCount > 0"
                        >Itens Atrasados</span
                      >
                      <small class="text-muted">Prazos vencidos</small>
                    </div>
                  </div>
                  <span
                    class="badge rounded-pill fs-6"
                    [ngClass]="
                      stats.overdueItemsCount > 0
                        ? 'bg-danger'
                        : 'bg-secondary'
                    "
                  >
                    {{ stats.overdueItemsCount }}
                  </span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </ng-container>
  </ng-container>

  <!-- ===== PAINEL ASSISTENTE (Assistant Dashboard - Tarefas) ===== -->
  <ng-container *ngIf="isAssistant && !isAdmin && !isManager">
    <ng-container *ngIf="assistantStats$ | async as stats; else loading">
      <div class="row g-3 mb-4">
        <!-- Aguardando Início -->
        <div class="col-12 col-md-6 col-lg-3">
          <div
            class="card border-0 shadow-sm h-100 bg-white border-start border-4 border-warning"
          >
            <div class="card-body p-4">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <div class="text-muted small fw-bold text-uppercase">
                    Aguardando Início
                  </div>
                  <h2 class="mb-0 fw-bold text-warning">
                    {{ stats.pendingCount }}
                  </h2>
                </div>
                <div
                  class="icon-box bg-warning-subtle text-warning rounded-circle"
                >
                  <i class="bi bi-hourglass-split fs-4"></i>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Em Andamento -->
        <div class="col-12 col-md-6 col-lg-3">
          <div
            class="card border-0 shadow-sm h-100 bg-white border-start border-4 border-primary"
          >
            <div class="card-body p-4">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <div class="text-muted small fw-bold text-uppercase">
                    Em Andamento
                  </div>
                  <h2 class="mb-0 fw-bold text-primary">
                    {{ stats.inProgressCount }}
                  </h2>
                </div>
                <div
                  class="icon-box bg-primary-subtle text-primary rounded-circle"
                >
                  <i class="bi bi-play-circle-fill fs-4"></i>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Entregues -->
        <div class="col-12 col-md-6 col-lg-3">
          <div
            class="card border-0 shadow-sm h-100 bg-white border-start border-4 border-success"
          >
            <div class="card-body p-4">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <div class="text-muted small fw-bold text-uppercase">
                    Entregues
                  </div>
                  <h2 class="mb-0 fw-bold text-success">
                    {{ stats.completedCount }}
                  </h2>
                </div>
                <div
                  class="icon-box bg-success-subtle text-success rounded-circle"
                >
                  <i class="bi bi-check-circle-fill fs-4"></i>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Atrasadas -->
        <div class="col-12 col-md-6 col-lg-3">
          <div
            class="card border-0 shadow-sm h-100 bg-white border-start border-4 border-danger"
          >
            <div class="card-body p-4">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <div class="text-muted small fw-bold text-uppercase">
                    Atrasadas
                  </div>
                  <h2 class="mb-0 fw-bold text-danger">
                    {{ stats.overdueCount }}
                  </h2>
                </div>
                <div class="icon-box bg-danger-subtle text-danger rounded-circle">
                  <i class="bi bi-exclamation-circle-fill fs-4"></i>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Ações Rápidas Assistente -->
      <div class="row g-4">
        <div class="col-12 col-lg-8">
          <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white pt-4 pb-0 border-0">
              <h5 class="fw-bold text-brand">
                <i class="bi bi-list-check me-2"></i>Minhas Tarefas
              </h5>
            </div>
            <div class="card-body p-4">
              <div class="row g-3">
                <div class="col-6 col-sm-4">
                  <a
                    routerLink="/orders"
                    class="btn btn-outline-light w-100 h-100 p-3 text-start border d-flex flex-column gap-2 card-action"
                  >
                    <div
                      class="icon-sm bg-brand text-white rounded-circle d-flex align-items-center justify-content-center"
                    >
                      <i class="bi bi-list-ul"></i>
                    </div>
                    <span class="fw-bold text-dark">Todas as Tarefas</span>
                    <small class="text-muted">{{ stats.totalOrders }}</small>
                  </a>
                </div>
                <div class="col-6 col-sm-4">
                  <a
                    routerLink="/orders?status=pending"
                    class="btn btn-outline-light w-100 h-100 p-3 text-start border d-flex flex-column gap-2 card-action"
                  >
                    <div
                      class="icon-sm bg-warning text-white rounded-circle d-flex align-items-center justify-content-center"
                    >
                      <i class="bi bi-hourglass-split"></i>
                    </div>
                    <span class="fw-bold text-dark">Aguardando</span>
                    <small class="text-muted">{{ stats.pendingCount }}</small>
                  </a>
                </div>
                <div class="col-6 col-sm-4">
                  <a
                    routerLink="/orders?status=progress"
                    class="btn btn-outline-light w-100 h-100 p-3 text-start border d-flex flex-column gap-2 card-action"
                  >
                    <div
                      class="icon-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center"
                    >
                      <i class="bi bi-play-circle-fill"></i>
                    </div>
                    <span class="fw-bold text-dark">Em Progresso</span>
                    <small class="text-muted">{{ stats.inProgressCount }}</small>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="col-12 col-lg-4">
          <div class="card border-0 shadow-sm mb-3 bg-brand text-white">
            <div class="card-body p-4 position-relative overflow-hidden">
              <h5 class="fw-bold z-1 position-relative">Precisa de Ajuda?</h5>
              <p class="small text-white-50 z-1 position-relative mb-3">
                Dúvidas sobre o sistema ou sobre uma tarefa específica?
              </p>
              <button
                class="btn btn-light text-brand fw-bold w-100 z-1 position-relative"
              >
                <i class="bi bi-whatsapp me-2"></i> Falar com Suporte
              </button>
              <i
                class="bi bi-chat-dots position-absolute text-white"
                style="
                  opacity: 0.1;
                  font-size: 8rem;
                  right: -20px;
                  bottom: -30px;
                "
              ></i>
            </div>
          </div>

          <div class="card border-0 shadow-sm">
            <div class="card-body">
              <h6 class="fw-bold text-dark mb-3">Resumo</h6>
              <div
                class="d-flex justify-content-between align-items-center mb-2"
              >
                <span class="text-muted">Total de Tarefas</span>
                <span class="fw-bold text-brand">{{ stats.totalOrders }}</span>
              </div>
              <div
                class="d-flex justify-content-between align-items-center mb-2"
              >
                <span class="text-muted">Concluídas</span>
                <span class="fw-bold text-success">{{
                  stats.completedCount
                }}</span>
              </div>
              <div class="d-flex justify-content-between align-items-center">
                <span class="text-muted">Atrasadas</span>
                <span class="fw-bold text-danger">{{ stats.overdueCount }}</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </ng-container>
  </ng-container>

  <ng-template #loading>
    <div class="d-flex justify-content-center py-5">
      <div class="spinner-border text-brand" role="status"></div>
    </div>
  </ng-template>
</div>
      <p class="text-muted mb-0" *ngIf="isManager && !isAdmin">
        Visão estratégica do negócio
      </p>
      <p class="text-muted mb-0" *ngIf="!isManager && !isAdmin">
        Vamos produzir? Aqui estão suas prioridades.
      </p>
    </div>
    <div class="d-none d-md-block text-end">
      <span class="fs-5 text-dark fw-semibold">{{
        currentDate | date : "dd/MM/yyyy"
      }}</span>
    </div>
  </div>

  <!-- ===== PAINEL ADMIN ===== -->
  <ng-container *ngIf="isAdmin">
    <div class="row g-3 mb-4">
      <!-- Card: Empresas Ativas -->
      <div class="col-12 col-md-6">
        <div class="card border-0 shadow-sm h-100 overflow-hidden card-hover">
          <div class="card-body p-4 position-relative">
            <div class="d-flex justify-content-between align-items-start mb-4">
              <div>
                <div class="text-uppercase text-muted fw-bold small mb-1">
                  Empresas Ativas
                </div>
                <h2 class="text-dark fw-bold mb-0">
                  {{ adminStats.activeTenants }}
                </h2>
              </div>
              <div
                class="icon-box bg-primary-subtle text-primary rounded-circle"
              >
                <i class="bi bi-building fs-4"></i>
              </div>
            </div>
            <div class="d-flex align-items-center small text-muted">
              <i class="bi bi-info-circle me-1"></i> Clientes SaaS ativos
            </div>
            <div class="bg-shape bg-primary"></div>
          </div>
        </div>
      </div>

      <!-- Card: Total de Usuários -->
      <div class="col-12 col-md-6">
        <div class="card border-0 shadow-sm h-100 overflow-hidden card-hover">
          <div class="card-body p-4 position-relative">
            <div class="d-flex justify-content-between align-items-start mb-4">
              <div>
                <div class="text-uppercase text-muted fw-bold small mb-1">
                  Total de Usuários
                </div>
                <h2 class="text-dark fw-bold mb-0">
                  {{ adminStats.totalUsers }}
                </h2>
              </div>
              <div
                class="icon-box bg-success-subtle text-success rounded-circle"
              >
                <i class="bi bi-people-fill fs-4"></i>
              </div>
            </div>
            <div class="d-flex align-items-center small text-muted">
              <i class="bi bi-info-circle me-1"></i> Contas de usuários
              registradas
            </div>
            <div class="bg-shape bg-success"></div>
          </div>
        </div>
      </div>
    </div>

    <!-- Atenção: Mensalidades Atrasadas -->
    <div class="row g-4">
      <div class="col-12 col-lg-8">
        <div class="card border-0 shadow-sm h-100">
          <div class="card-header bg-white pt-4 pb-0 border-0">
            <h5 class="fw-bold text-brand">Ações Rápidas</h5>
          </div>
          <div class="card-body p-4">
            <div class="row g-3">
              <div class="col-6 col-sm-4">
                <a
                  routerLink="/tenants"
                  class="btn btn-outline-light w-100 h-100 p-3 text-start border d-flex flex-column gap-2 card-action"
                >
                  <div
                    class="icon-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center"
                  >
                    <i class="bi bi-building"></i>
                  </div>
                  <span class="fw-bold text-dark">Empresas</span>
                  <small class="text-muted">Gerenciar</small>
                </a>
              </div>
              <div class="col-6 col-sm-4">
                <a
                  routerLink="/users"
                  class="btn btn-outline-light w-100 h-100 p-3 text-start border d-flex flex-column gap-2 card-action"
                >
                  <div
                    class="icon-sm bg-success text-white rounded-circle d-flex align-items-center justify-content-center"
                  >
                    <i class="bi bi-people-fill"></i>
                  </div>
                  <span class="fw-bold text-dark">Usuários</span>
                  <small class="text-muted">Gerenciar</small>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-12 col-lg-4">
        <div class="card border-0 shadow-sm h-100">
          <div class="card-header bg-white pt-4 pb-0 border-0">
            <h5 class="fw-bold text-dark">Atenção</h5>
          </div>
          <div class="card-body p-4">
            <div class="list-group list-group-flush">
              <div
                class="list-group-item px-0 py-3 d-flex justify-content-between align-items-center"
                [class.bg-danger-subtle]="adminStats.overduePayments > 0"
                [class.rounded]="adminStats.overduePayments > 0"
                [class.p-2]="adminStats.overduePayments > 0"
              >
                <div class="d-flex align-items-center gap-3">
                  <i
                    class="bi bi-exclamation-triangle-fill text-danger fs-5"
                  ></i>
                  <div class="d-flex flex-column">
                    <span
                      class="fw-bold"
                      [class.text-danger]="adminStats.overduePayments > 0"
                      >Mensalidades Atrasadas</span
                    >
                    <small class="text-muted">Pendências de clientes</small>
                  </div>
                </div>
                <span
                  class="badge rounded-pill fs-6"
                  [ngClass]="
                    adminStats.overduePayments > 0
                      ? 'bg-danger'
                      : 'bg-secondary'
                  "
                >
                  {{ adminStats.overduePayments }}
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </ng-container>

  <!-- ===== PAINEL OPERACIONAL (Manager/Assistant) ===== -->
  <ng-container *ngIf="!isAdmin">
    <!-- VISÃO MANAGER (Dashboard Financeiro) -->
    <ng-container *ngIf="isManager">
      <ng-container *ngIf="stats$ | async as stats; else loading">
        <div class="row g-3 mb-4">
          <div class="col-12 col-md-4">
            <div
              class="card border-0 shadow-sm h-100 overflow-hidden card-hover"
            >
              <div class="card-body p-4 position-relative">
                <div
                  class="d-flex justify-content-between align-items-start mb-4"
                >
                  <div>
                    <div class="text-uppercase text-muted fw-bold small mb-1">
                      Receita Total
                    </div>
                    <h2 class="text-dark fw-bold mb-0">
                      {{ stats.revenue | currency : "BRL" }}
                    </h2>
                  </div>
                  <div
                    class="icon-box bg-primary-subtle text-primary rounded-circle"
                  >
                    <i class="bi bi-graph-up-arrow fs-4"></i>
                  </div>
                </div>
                <div class="d-flex align-items-center small text-muted">
                  <i class="bi bi-info-circle me-1"></i> Valor bruto de
                  contratos ativos
                </div>
                <div class="bg-shape bg-primary"></div>
              </div>
            </div>
          </div>

          <div class="col-12 col-md-4">
            <div
              class="card border-0 shadow-sm h-100 overflow-hidden card-hover"
            >
              <div class="card-body p-4 position-relative">
                <div
                  class="d-flex justify-content-between align-items-start mb-4"
                >
                  <div>
                    <div class="text-uppercase text-muted fw-bold small mb-1">
                      Custo Operacional
                    </div>
                    <h2 class="text-danger fw-bold mb-0">
                      {{ stats.cost | currency : "BRL" }}
                    </h2>
                  </div>
                  <div
                    class="icon-box bg-danger-subtle text-danger rounded-circle"
                  >
                    <i class="bi bi-people-fill fs-4"></i>
                  </div>
                </div>
                <div class="d-flex align-items-center small text-muted">
                  <i class="bi bi-arrow-down-right text-danger me-1"></i>
                  Pagamentos a parceiros
                </div>
                <div class="bg-shape bg-danger"></div>
              </div>
            </div>
          </div>

          <div class="col-12 col-md-4">
            <div
              class="card border-0 shadow h-100 overflow-hidden card-hover bg-brand text-white position-relative"
            >
              <div class="card-body p-4 position-relative z-1">
                <div
                  class="d-flex justify-content-between align-items-start mb-4"
                >
                  <div>
                    <div
                      class="text-uppercase text-white-50 fw-bold small mb-1"
                    >
                      Lucro Líquido Real
                    </div>
                    <h2 class="text-white fw-bold mb-0">
                      {{ stats.netProfit | currency : "BRL" }}
                    </h2>
                  </div>
                  <div
                    class="icon-box bg-white text-brand rounded-circle shadow-sm"
                  >
                    <i class="bi bi-wallet2 fs-4"></i>
                  </div>
                </div>
                <div class="d-flex align-items-center small text-white-50">
                  <i class="bi bi-pie-chart-fill me-1"></i> Margem:
                  <span class="text-white fw-bold ms-1"
                    >{{ stats.margin | number : "1.0-1" }}%</span
                  >
                </div>
              </div>
              <div class="card-pattern"></div>
            </div>
          </div>
        </div>

        <div class="row g-4">
          <div class="col-12 col-lg-8">
            <div class="card border-0 shadow-sm h-100">
              <div class="card-header bg-white pt-4 pb-0 border-0">
                <h5 class="fw-bold text-brand">Acesso Rápido</h5>
              </div>
              <div class="card-body p-4">
                <div class="row g-3">
                  <div class="col-6 col-sm-4">
                    <a
                      routerLink="/orders/create"
                      class="btn btn-outline-light w-100 h-100 p-3 text-start border d-flex flex-column gap-2 card-action"
                    >
                      <div
                        class="icon-sm bg-brand text-white rounded-circle d-flex align-items-center justify-content-center"
                      >
                        <i class="bi bi-plus-lg"></i>
                      </div>
                      <span class="fw-bold text-dark">Nova Ordem</span>
                      <small class="text-muted">Cadastrar venda</small>
                    </a>
                  </div>
                  <div class="col-6 col-sm-4">
                    <a
                      routerLink="/orders"
                      class="btn btn-outline-light w-100 h-100 p-3 text-start border d-flex flex-column gap-2 card-action"
                    >
                      <div
                        class="icon-sm bg-primary-subtle text-primary rounded-circle d-flex align-items-center justify-content-center"
                      >
                        <i class="bi bi-list-ul"></i>
                      </div>
                      <span class="fw-bold text-dark">Listar Ordens</span>
                      <small class="text-muted">Ver todas</small>
                    </a>
                  </div>
                  <div class="col-6 col-sm-4">
                    <a
                      routerLink="/clients"
                      class="btn btn-outline-light w-100 h-100 p-3 text-start border d-flex flex-column gap-2 card-action"
                    >
                      <div
                        class="icon-sm bg-info-subtle text-info rounded-circle d-flex align-items-center justify-content-center"
                      >
                        <i class="bi bi-people"></i>
                      </div>
                      <span class="fw-bold text-dark">Clientes</span>
                      <small class="text-muted">Base de contatos</small>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="col-12 col-lg-4">
            <div class="card border-0 shadow-sm h-100">
              <div class="card-header bg-white pt-4 pb-0 border-0">
                <h5 class="fw-bold text-dark">Atenção</h5>
              </div>
              <div class="card-body p-4">
                <div class="list-group list-group-flush">
                  <div
                    class="list-group-item px-0 py-3 d-flex justify-content-between align-items-center"
                    [class.bg-danger-subtle]="stats.overdueItemsCount > 0"
                    [class.rounded]="stats.overdueItemsCount > 0"
                    [class.p-2]="stats.overdueItemsCount > 0"
                  >
                    <div class="d-flex align-items-center gap-3">
                      <i
                        class="bi bi-exclamation-triangle-fill text-danger fs-5"
                      ></i>
                      <div class="d-flex flex-column">
                        <span
                          class="fw-bold"
                          [class.text-danger]="stats.overdueItemsCount > 0"
                          >Itens Atrasados</span
                        >
                        <small class="text-muted">Prazos vencidos</small>
                      </div>
                    </div>
                    <span
                      class="badge rounded-pill fs-6"
                      [ngClass]="
                        stats.overdueItemsCount > 0
                          ? 'bg-danger'
                          : 'bg-secondary'
                      "
                    >
                      {{ stats.overdueItemsCount }}
                    </span>
                  </div>
                  <div
                    class="list-group-item px-0 py-3 d-flex justify-content-between align-items-center"
                  >
                    <div class="d-flex align-items-center gap-3">
                      <i class="bi bi-hourglass-split text-primary fs-5"></i>
                      <div class="d-flex flex-column">
                        <span class="fw-bold">Em Andamento</span>
                        <small class="text-muted">Ordens ativas</small>
                      </div>
                    </div>
                    <span class="badge bg-primary rounded-pill fs-6">{{
                      stats.activeOrdersCount
                    }}</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </ng-container>
    </ng-container>

    <!-- VISÃO ASSISTANT (Tarefas do Assistente) -->
    <ng-container *ngIf="!isManager">
      <ng-container *ngIf="assistantStats$ | async as stats; else loading">
        <div class="row g-3 mb-4">
          <div class="col-12 col-md-4">
            <div
              class="card border-0 shadow-sm h-100 bg-white border-start border-4 border-warning"
            >
              <div class="card-body p-3">
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <div class="text-muted small fw-bold text-uppercase">
                      Aguardando Início
                    </div>
                    <h2 class="mb-0 fw-bold text-warning">
                      {{ stats.pendingCount }}
                    </h2>
                  </div>
                  <div
                    class="icon-box bg-warning-subtle text-warning rounded-circle"
                  >
                    <i class="bi bi-hourglass-split fs-4"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="col-12 col-md-4">
            <div
              class="card border-0 shadow-sm h-100 bg-white border-start border-4 border-primary"
            >
              <div class="card-body p-3">
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <div class="text-muted small fw-bold text-uppercase">
                      Em Andamento
                    </div>
                    <h2 class="mb-0 fw-bold text-primary">
                      {{ stats.inProgressCount }}
                    </h2>
                  </div>
                  <div
                    class="icon-box bg-primary-subtle text-primary rounded-circle"
                  >
                    <i class="bi bi-play-circle-fill fs-4"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="col-12 col-md-4">
            <div
              class="card border-0 shadow-sm h-100 bg-white border-start border-4 border-success"
            >
              <div class="card-body p-3">
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <div class="text-muted small fw-bold text-uppercase">
                      Entregues (Mês)
                    </div>
                    <h2 class="mb-0 fw-bold text-success">
                      {{ stats.completedThisMonth }}
                    </h2>
                  </div>
                  <div
                    class="icon-box bg-success-subtle text-success rounded-circle"
                  >
                    <i class="bi bi-check-circle-fill fs-4"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="row g-4">
          <div class="col-12 col-lg-8">
            <div class="card border-0 shadow-sm h-100">
              <div class="card-header bg-white py-3 border-0">
                <h5 class="card-title fw-bold text-brand m-0">
                  <i class="bi bi-calendar-event me-2"></i>Próximos Prazos
                </h5>
              </div>
              <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                  <thead class="table-light">
                    <tr>
                      <th class="ps-3">Serviço</th>
                      <th>Cliente</th>
                      <th>Prazo Entrega</th>
                      <th class="text-end pe-3">Ação</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr *ngIf="stats.nextDeadlines.length === 0">
                      <td colspan="4" class="text-center py-4 text-muted">
                        Nenhuma tarefa com prazo próximo.
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
              <div class="card-footer bg-white border-0 text-center py-3">
                <a
                  routerLink="/orders"
                  class="btn btn-link text-brand text-decoration-none fw-bold"
                >
                  Ver todas as tarefas <i class="bi bi-arrow-right"></i>
                </a>
              </div>
            </div>
          </div>

          <div class="col-12 col-lg-4">
            <div class="card border-0 shadow-sm mb-3 bg-brand text-white">
              <div class="card-body p-4 position-relative overflow-hidden">
                <h5 class="fw-bold z-1 position-relative">Precisa de Ajuda?</h5>
                <p class="small text-white-50 z-1 position-relative mb-3">
                  Dúvidas sobre o sistema ou sobre uma ordem específica?
                </p>
                <button
                  class="btn btn-light text-brand fw-bold w-100 z-1 position-relative"
                >
                  <i class="bi bi-whatsapp me-2"></i> Falar com Suporte
                </button>
                <i
                  class="bi bi-chat-dots position-absolute text-white"
                  style="
                    opacity: 0.1;
                    font-size: 8rem;
                    right: -20px;
                    bottom: -30px;
                  "
                ></i>
              </div>
            </div>

            <div class="card border-0 shadow-sm">
              <div class="card-body">
                <h6 class="fw-bold text-dark mb-3">Minha Carteira</h6>
                <div
                  class="d-flex justify-content-between align-items-center mb-2"
                >
                  <span class="text-muted">A Receber</span>
                  <span class="fw-bold text-success">--</span>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                  <span class="text-muted">Recebido (Mês)</span>
                  <span class="fw-bold text-dark">--</span>
                </div>
                <hr class="my-2" />
                <small class="text-muted fst-italic" style="font-size: 0.75rem"
                  >* Valores confirmados pelo gestor.</small
                >
              </div>
            </div>
          </div>
        </div>
      </ng-container>
    </ng-container>
  </ng-container>

  <ng-template #loading>
    <div class="d-flex justify-content-center py-5">
      <div class="spinner-border text-brand" role="status"></div>
    </div>
  </ng-template>
</div>
